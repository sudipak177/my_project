<style>
/* appliedJobsPage.css */

/* Global Styles */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f4f4f9;
    color: #333;
}

h1 {
    text-align: center;
    margin-top: 20px;
    color: #333;
}

/* Applied Jobs Page Styles */
.appliedJobsPage {
    width: 90%;
    max-width: 1200px;
    margin: 20px auto;
    background: #fff;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    border-radius: 10px;
    padding: 20px;
}

.appliedJobsPage h1 {
    margin-bottom: 20px;
    color: #007bff;
}

.appliedJobsPage ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

.appliedJobsPage li {
    display: flex;
    align-items: flex-start;
    margin-bottom: 20px;
    padding: 20px;
    border: 1px solid #ddd;
    border-radius: 10px;
}

.imageSection img {
    width: 100px;
    height: 100px;
    object-fit: cover;
    border-radius: 5px;
    margin-right: 20px;
}

.jobInfo {
    flex-grow: 1;
}

.jobInfo strong {

    {{!-- margin-bottom: 5px; --}}
    color: #007bff;
}

.jobInfo p {
    margin: 5px 0;
}

/* No Data Found Styles */
.appliedJobsPage p {
    text-align: center;
    margin-top: 20px;
    color: #dc3545;
}

/* Responsive Styles */
@media (max-width: 768px) {
    .appliedJobsPage li {
        flex-direction: column;
        align-items: center;
    }

    .imageSection img {
        margin-bottom: 10px;
    }
}

</style>

<div class="appliedJobsPage">
    <h1>Job Applied Status</h1>

    {{#if appliedData}}
        <ul>
            {{#each appliedData}}
                <li type="1">
                    <div class="imageSection">
                        <img src="/static/images/{{image}}" alt="no image">
                    </div>
                    <div class="jobInfo">
                        <strong>Job Name:</strong> {{job_name}} <br>
                        <strong>Salary:</strong> {{salary}} <br>
                        <strong>Job Type:</strong> {{job_type}} <br>
                        <strong>Description:</strong> {{description}} <br>
                        <strong>Status</strong> {{status}}
                    </div>

                </li>
                                    <div>
                                         <a href="/userprofile" class="btn btn-primary">Go Back</a>
                    </div>
            {{/each}}
        </ul>
    {{else}}
        <p>No job application data found.</p>
    {{/if}}
</div>
