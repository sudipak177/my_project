<style>
   
    .alert {
        position: fixed;
        top: 20px;
        right: 40px;
        z-index: 1000;
        width: 350px;
        opacity: 0;
        transition: opacity 0.5s ease-in-out;
    }

    h1{
        text-align: center;
        margin-top: 30px;
        font-size: 40px;
        font-family: 'Times New Roman', Times, serif;
    }

    .jobCardContainer {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        margin-top: 40px;
        
    }

    .jobCardContainer .card .imageSection {
        height: 250px;
        width: 270px;
        overflow: hidden;
    }
    .imageSection img{
        margin: 10px;
        height: 100%;
        width: 100%;
        object-fit: cover;
    }
    .card {
        width: 280px;
        height: 500px;
        margin-bottom: 40px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.3s ease-in-out;
    }

    .card:hover {
        box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.3);
    }
    .btn-container {
        display: flex;
        justify-content: space-between;
    }
    .btn-container a {
        margin: 10px;
        text-decoration: none;
        padding-left: 25px;
        padding-right: 25px;
    }
</style>

{{#if deleteJob}}
<div class="alert alert-warning alert-dismissible fade show" role="alert">
    <strong>{{deleteJob}}</strong>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<div class="jobPage">
    <h1>Job Lists</h1>
    <hr>

    <div class="jobCardContainer">
        {{#each jobList}}
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="imageSection">
                        <img src="/static/images/{{this.image}}" class="card-img-top" alt="no image">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{this.job_name}}</h5>
                        <p class="card-text"><strong>Salary: </strong>{{this.salary}}</p>
                        <p class="card-text"><strong>Job Type: </strong>{{this.job_type}}</p>
                        <p class="card-text"> {{this.description}}</p><br>
                        <div class="btn-container">
                            <a href="/backend/companyAdmin/delete/{{this.id}}" class="btn btn-secondary">Delete</a>
                            <a href="/backend/companyAdmin/update/{{this.id}}" class="btn btn-secondary">Update</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<script>
    // JavaScript for fading in the delete alert
    document.addEventListener('DOMContentLoaded', function () {
        const alert = document.querySelector('.alert');
        if (alert) {
            alert.style.opacity = '1';
            setTimeout(() => {
                alert.style.opacity = '0';
            }, 4000); 
        }
    });
</script>



