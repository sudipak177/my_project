<link rel="stylesheet" href="static/css/login.css">




<body>

 {{#if successMessage}}
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>{{successMessage}}</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}

    <div class="wrapper" id="wrapper">

        <div class="form-box login">
         
            {{#ifEq role 'user'}}
            <form action="/login" method="post">
               <h1 style="text-align: center;">Login</h1>
                {{/ifEq}}


                {{#ifEq role 'company'}}
                <link rel="stylesheet" href="/static/css/login.css">
                <form action="/backend/company" method="post">
                    <h1 style="text-align: center;">Company Login</h1>
                    {{/ifEq}}

                        <div class="input-data" >
                             <label>Email:</label> <br>
                            <input type="text" name="email" required>
                            <div class="underline"></div>
                           
                        </div>
                        <div class="input-data">
                            <label for="password">Password:</label> <br>
                            <input type="password" name="password" id="password" required>
                            <div class="underline"></div>
                        </div>

                        {{#if errors}}
                        {{#each errors}}
                        <div class="alert alert-danger" role="alert">
                            {{this}}
                        </div>
                        {{/each}}
                        {{/if}}

                        <div>
                            <button type="submit" class="btn1" >Login</button>
                        </div>
                        <div class="login-register">
                            <p>Don't have an account <a href="/signup" style="text-decoration: none;" class="register-link">Register Now</a></p>
                            <p>Login as company? <a style="text-decoration: none;" href="/backend/company">Login Now</a></p>
                            <p>Login as Admin? <a style="text-decoration: none;" href="/backend/adminLogin">Login Now</a></p>
                        </div>
                   
                 </form>
        </div>

    </div>

    <script src="/static/scripts/form.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>